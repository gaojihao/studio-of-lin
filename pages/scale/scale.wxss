@import "../common/common.wxss";

.weui-cell-list {
  display: flex;
  flex-direction: column;
  width: 92vw;
  border-bottom: 1px dashed #e8e8e8;
  justify-content: space-around;
}

.weui-cell-title {
  margin-top: 20rpx;
  font-size: 13pt;
  color: #333333;
  overflow:hidden;
  text-overflow:ellipsis;
  -o-text-overflow:ellipsis;
  -webkit-text-overflow:ellipsis;
  -moz-text-overflow:ellipsis;
  white-space:nowrap;
}

.weui-cell-sub-title{
  font-size: 12pt;
  color: #666666;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
}

.weui-cell-date{
  font-size: 10pt;
  color: #999999;
  margin-bottom: 20rpx;
}