@import "../common/common.wxss";

.top {
  background: linear-gradient(to bottom, #FF9176, #FE5E86); /* 标准的语法 */
  height: 40vw;
  width: 93vw;
  display: flex;
  border-radius: 2vw;
  flex-direction: row;
  align-items: center;
}

.userAvatar {
  width: 20vw;
  height: 20vw;
  margin-right: 20rpx;
  margin-left: 20rpx;
}


.userNickName{
  font-size: 14pt;
  color:white;
  flex: 1;
  flex-direction: row;
  display: flex;
  align-items: center;
}

.info{
  background-color: rgba(0, 0, 0, 0.137);
  color: white;
  font-size: 11pt;
  width: 20vw;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  padding-left: 20rpx;
}


.info-style{
  margin-top: 20rpx;
  width: 88vw;
}


.info-item{
  display: flex;
  height: 120rpx;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
  border-bottom: 1px solid #f0f0f0;
}

.phone{
  flex: 1;
  text-align: right;
  padding-right: 16rpx;
}


.edit{
  height: 80rpx;
  border-radius: 40rpx;
  margin-top: 40rpx;
}

.edit.button-hover{
  background-color: #ff6348;
}

button[type=primary]{
  background-color: #ff7f50;
}

text{
  color: #999;
  font-size: 10pt;
}

.label{
  color: #333;
  font-size: 12pt;
  margin-right: 16rpx;
}