@import "../common/common.wxss";


.content-style{
  margin-top: 20rpx;
  width: 80vw;
}

.comment-cells-title{
  font-size: 12pt;
  color: #666;
  font-weight: lighter;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}


.textarea{
  background-color: #efefef;
  width: calc(100vw-60rpx);
  color: #666;
  font-size: 13px;
  padding: 10rpx;
  margin-bottom: 20px;
  border-radius: 8rpx;
}


.commit{
  height: 80rpx;
  border-radius: 40rpx;
  margin-top: 40rpx;
}

.commit.button-hover{
  background-color: #ff6348;
}

button[type=primary]{
  background-color: #ff6348;
  padding-bottom: 16rpx;
}

.comment1-description{
  display:flex;
  flex-direction:row;
  padding-bottom: 20rpx;
}
.stars{
    background:url('data:image/png;base64,');
    width: 50rpx;
    height: 50rpx;
    background-size: 50rpx 50rpx;
    margin-right: 30rpx;
    transition: 600ms;
}
.on{
    background:url('data:image/png;base64,');
    width: 50rpx;
    height: 50rpx;
    background-size: 50rpx 50rpx;
    transition: 1s;
    transform: scale(1,1)
}